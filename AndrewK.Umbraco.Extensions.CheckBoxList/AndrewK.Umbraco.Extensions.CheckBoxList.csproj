<Project Sdk="Microsoft.NET.Sdk.Razor">

    <PropertyGroup>
        <TargetFramework>net9.0</TargetFramework>
        <Nullable>enable</Nullable>
        <ImplicitUsings>enable</ImplicitUsings>

        <!-- NuGet Package Properties -->
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <PackageId>AndrewK.Umbraco.CheckBoxList</PackageId>
        <PackageVersion>16.0.2</PackageVersion>
        <Version>$(PackageVersion)</Version>
        <Authors>Andrew Kud</Authors>
        <Product>CheckBoxList</Product>
        <Title>AndrewK.Umbraco.CheckBoxList</Title>
        <Description>Makes it possible to work with label on UI and values on the server side</Description>
        <PackageDescription>Makes it possible to work with label on UI and values on the server side</PackageDescription>
        <PackageTags>Umbraco;Extension;CheckBox;CheckBoxList;Backoffice</PackageTags>
        <AssemblyVersion>$(PackageVersion)</AssemblyVersion>
        <FileVersion>$(PackageVersion)</FileVersion>
        <PackageProjectUrl>https://github.com/KudAndrii/UmbracoExtensions</PackageProjectUrl>
        <RepositoryUrl>https://github.com/KudAndrii/UmbracoExtensions</RepositoryUrl>
        <RepositoryType>git</RepositoryType>
        <PackageIcon>Icon.png</PackageIcon>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <PackageLicenseFile>LICENSE</PackageLicenseFile>
        <PackageReleaseNotes>
            $(PackageVersion):
            - Dependencies-versions update.
            - Magor package version alligned with the dependent Umbraco version.
        </PackageReleaseNotes>
    </PropertyGroup>

    <PropertyGroup>
        <StaticWebAssetBasePath>App_Plugins/AndrewKCheckBoxList</StaticWebAssetBasePath>
    </PropertyGroup>


    <ItemGroup>
        <SupportedPlatform Include="browser"/>
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="AndrewK.Umbraco.Dictionary"/>
        <PackageReference Include="Microsoft.AspNetCore.Components.Web"/>
    </ItemGroup>

    <ItemGroup>
        <Content Include="Icon.png">
            <Pack>true</Pack>
            <PackagePath>\</PackagePath>
        </Content>
        <Content Include="README.md">
            <Pack>true</Pack>
            <PackagePath>\</PackagePath>
        </Content>
        <Content Include="LICENSE">
            <Pack>true</Pack>
            <PackagePath>\</PackagePath>
        </Content>
    </ItemGroup>

    <ItemGroup>
        <None Include="client\**\*.*">
            <Pack>False</Pack>
        </None>
    </ItemGroup>

</Project>
